<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBE1FA"
    tools:context=".login">

    <EditText
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext_design"
        android:drawableStart="@drawable/person"
        android:drawablePadding="8dp"
        android:hint="username"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext_design"
        android:drawableStart="@drawable/pass"
        android:drawablePadding="8dp"
        android:hint="password "
        android:inputType="textPassword"
        android:paddingStart="20dp" />

    <Button
        android:id="@+id/buttoon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button"
        android:backgroundTint="#1B262C"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvSignUpSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="235dp"
        android:layout_marginTop="385dp"
        android:text="SignUp"
        android:textColor="#0F4C75"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SignUpSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="390dp"
        android:text="Don't have an account?"
        android:textColor="#3282B8"
        android:textSize="11sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#1B262C" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textColor="#3282B8"
        android:textSize="36sp" />
</RelativeLayout>